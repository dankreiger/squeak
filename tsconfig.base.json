{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@leckerli-backend/restaurants-service.enums": [
        "libs/backend/restaurants-service/enums/src/index.ts"
      ],
      "@leckerli-backend/restaurants-service.interfaces": [
        "libs/backend/restaurants-service/interfaces/src/index.ts"
      ],
      "@leckerli-backend/restaurants-service.types": [
        "libs/backend/restaurants-service/types/src/index.ts"
      ],
      "@leckerli-backend/restaurants-service.utils": [
        "libs/backend/restaurants-service/utils/src/index.ts"
      ],
      "@leckerli-frontend/web.ui": ["libs/frontend/web/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
